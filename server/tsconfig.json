{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "..",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["../client/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "../client/src/**/*.ts",
    "../client/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
